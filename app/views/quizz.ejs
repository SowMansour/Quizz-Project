<%- include('partials/header') %>

        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h2 class="h1 display-4"><%- quizzes.title %></h2>
            <p class="lead"><%- quizzes.description %></p>
            <p class="font-weight-bold"><%- quizzes.author.fullName %></p>
            <p class="lead"><%- quizzes.questions.length%></p>
        </div>

        <div class="row">
            <% for(let tag of quizzes.tags){ %>
            <div class="col-3 p-4 text-center">
                <a class="btn btn-block btn-lg tag tag--<%- tag.name.toLowerCase() %>" href="/tag/<%- tag.id %>">
                   <%- tag.name %>
                </a>
            </div>
            <% } %>
        </div>

        <div class="row">

            <% quizzes.questions.forEach(question => { %>
                
            <div class="col-12">
                <label class="badge level level--<%- question.level.name.toLowerCase() %>"><%- question.level.name %></label>
                <h4>
                    <%- question.question %>
                </h4>
                <ol>
                    <% question.answers.forEach(answer => { %>
                    <li><%- answer.description %></li>
               <% }) %>
                </ol>
            </div>
        <% }); %>
        </div>
        

    </main>

    <%- include('partials/footer') %>